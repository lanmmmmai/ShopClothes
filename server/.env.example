# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
# URL của frontend application
FRONTEND_URL=http://localhost:5173

# JWT Configuration
# QUAN TRỌNG: Phải đổi trong production! Sử dụng strong random string
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change-me-in-production-use-strong-random-secret
JWT_EXPIRES_IN=7d

# NocoDB Configuration
# Base URL của NocoDB instance
NOCODB_BASE_URL=http://localhost:8080
# API Token từ NocoDB (Settings > API Token)
NOCODB_TOKEN=your-nocodb-api-token-here
# Project ID từ NocoDB URL (ví dụ: noco/p01sk5qj4fhkmm2 -> p01sk5qj4fhkmm2)
NOCODB_PROJECT=your-project-id-here

# n8n Configuration (optional, for email notifications)
# Base URL của n8n instance
N8N_BASE_URL=http://localhost:5678
